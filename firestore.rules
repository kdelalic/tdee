rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profiles: Users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Daily Entries: Users can only read/write entries that belong to them
    match /entries/{entryId} {
      // Allow create if the new document's userId matches the authenticated user
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow update if the existing document's userId matches AND the new data also matches (can't assign to someone else)
      allow update: if request.auth != null && resource.data.userId == request.auth.uid && request.resource.data.userId == request.auth.uid;
      
      // Allow read/delete if the document belongs to the user
      allow read, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // For list queries (collection group queries or simple collection queries)
      // Firestore requires the query to match the security rule.
      // So `where("userId", "==", auth.uid)` works with the above read rule.
    }
  }
}
